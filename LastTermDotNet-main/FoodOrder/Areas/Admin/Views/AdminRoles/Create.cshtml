@model FoodOrder.Models.Role

@{
    ViewData["Title"] = "Tạo quyền truy cập mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h2 class="toast-header">Xóa bỏ quyền truy cập</h2>
    <div class="card-subtitle">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item">Home</a>
            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Quản lý quyền truy cập</a>
            <span class="breadcrumb-item active">Tạo quyền truy cập mới</span>
        </nav>
    </div>
</div>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên quyền truy cập</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Mô tả</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo quyền truy cập mới" class="btn btn-primary" />
                <a class="btn btn-outline-dark" asp-action="Index">Trở về danh sách</a>
            </div>
        </form>
    </div>
</div>



